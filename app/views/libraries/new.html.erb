
<h3>Create a Library</h3></br></hr>


<%= form_for @library do |form| %>

 <% if @library.errors.any? %>
 <div id="error_explanation"> 
 <ul>
 <% @library.errors.each do |error| %>
 <li><%= error.full_message %></li>
 <% end %>
 </ul>
 </div>
 <% end %>
 <div class="row">
 <div class="col-6 offset-3">
 <div class="form-group">
 <%= form.label :Name %>
 <%= form.text_field :name, class:"form-control" %>
 </div>
 </div>
 </div>

 <div class="form-group ">
 <%= form.label :OpeningTime %>
 <%= form.time_select :opening_time,class:"form-control"  %>
 </div>

 <div class="form-group">
 <%= form.label :ClosingTime %>
 <%= form.time_select :closing_time,class:"form-control"  %>
 </div>

  <%= form.submit %>
<% end %>
<br>
<div style="text-align:center"><%= link_to "Back", libraries_path, class: "btn btn-primary" %></div>


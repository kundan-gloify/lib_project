
<h3>Update Author Details</h3>


  <%= form_for @user do |form| %>

 <% if @user.errors.any? %>
 <div id="error_explanation"> 
 <ul>
 <% @user.errors.each do |error| %>
 <li><%= error.full_message %></li>
 <% end %>
 </ul>
 </div>
 <% end %>

 <div class="field">
 <%= form.label :Name %>
 <%= form.text_field :name %>
 </div>

  <div class="field">
 <%= form.label :Email %>
 <%= form.text_field :email %>
 </div>

  <div class="field">
 <%= form.label :DOB %>
 <%= form.date_field :date_of_birth %>
 </div>

  <%= form.submit %>
<% end %>
<br>
<div style="text-align:center"><%= link_to "Back", users_path, class: "btn btn-primary" %></div>

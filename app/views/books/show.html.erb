<h3>Book Name : <%= @book_name.title%></h3></br><hr>

<table class="table table-striped">
 <thead>
    <tr>
      <th scope="col">Title</th>
      <th scope="col">Published Date</th>
      <th scope="col">Language</th>
      <th scope="col">Author Name</th>
    </tr>
  </thead>
  <tbody>
  	
    <% i=1 %>
    <% @book.each do |book| %>
    <tr>
    <td><%= book.title %></td>
    <td><%= book.published_at %></td>
    <td><%= book.language %></td>
    <td><%= book.name %></td>
	</tr>
	<% i+=1 %>
   <% end %>     
</table>
<br>
<div style="text-align:center"><%= link_to "Back", books_path, class: "btn btn-primary" %></div>


